<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    
    <Dialog
        id="updateDialog"
        title="Change Source Payload (You can only modify source payload)"
        resizable="true"
        draggable="true"
        contentWidth="70%"      
        contentHeight="70%">    

        <beginButton>
            <Button id="_IDGenButton1"
                text="Update"
                type="Emphasized"
                press="onUpdate" />
        </beginButton>
        
        <endButton>
            <Button id="_IDGenButton2"
                text="Cancel"
                type="Default"
                press=".onCloseDailog" />
        </endButton>
        
        <content>
            <form:SimpleForm id="_IDGenSimpleForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="2" labelSpanL="2" labelSpanM="2" labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0"
                columnsXL="1" columnsL="1" columnsM="1"
                singleContainerFullSize="true">

                <Label id="_IDGenLabel" text="Source Payload" />
                
                <TextArea id="_IDGenTextArea"
                    value=""      
                    rows="20"                    
                    width="100%"                 
                    wrapping="Soft"
                    liveChange="onInputChange" />
                
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
